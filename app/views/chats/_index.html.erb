<div class="mx-auto w-50">
  <% chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <p style="text-align: right"><%= chat.message %></p>
    <% else %>
      <%= image_tag chat.user.get_profile_image, size:'50x50',style:"text-align: right" %>
      <span style="text-align: left"><%= chat.message %></span><br>
    <% end %>
  <% end %>
</div>